<style>
    /* ---- CTA section ---- */

    .chat-cta {
        background: #040404;
        padding: 8rem var(--gutter) 7rem;
        border-top: 1px solid var(--divider);
    }

    .chat-cta__inner {
        max-width: 700px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .chat-cta__tagline {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--text-muted);
        letter-spacing: 0.14em;
        text-transform: uppercase;
        margin-bottom: 1.5rem;
    }

    .chat-cta__heading {
        font-family: var(--font-display);
        font-size: var(--text-hero);
        font-weight: 400;
        line-height: 1.05;
        letter-spacing: -0.02em;
        margin-bottom: 3rem;
    }

    .chat-cta__heading em {
        font-style: italic;
        color: var(--accent);
    }

    /* ---- CTA button ---- */

    .chat-cta__open-btn {
        font-family: var(--font-mono);
        font-size: var(--text-base);
        font-weight: 700;
        letter-spacing: 0.04em;
        padding: 1rem 2.25rem;
        border-radius: 999px;
        background: var(--accent);
        color: var(--bg);
        border: none;
        cursor: pointer;
        transition:
            background 0.2s,
            transform 0.15s;
        white-space: nowrap;
    }

    .chat-cta__open-btn:hover {
        background: var(--accent-dim);
        transform: translateY(-1px);
    }

    .chat-cta__open-btn:active {
        transform: translateY(0);
    }

    .chat-cta__consent {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--text-muted);
        margin-top: 0.9rem;
    }

    /* ---- Footer ---- */

    .chat-site-footer {
        background: #040404;
        border-top: 1px solid var(--divider);
        padding: 2rem var(--gutter);
    }

    .chat-site-footer__inner {
        max-width: var(--max-w);
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .chat-site-footer__logo {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        font-weight: 700;
        letter-spacing: 0.18em;
        color: var(--text);
    }

    .chat-site-footer__copy {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--text-muted);
    }

    .chat-site-footer__tagline {
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--divider);
        margin-left: auto;
    }

    @media (max-width: 480px) {
        .chat-site-footer__tagline {
            margin-left: 0;
        }
    }
</style>
