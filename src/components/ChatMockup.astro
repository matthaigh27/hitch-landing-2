---
---

<div class="chat-app">
  <!-- Left sidebar -->
  <aside class="chat-app__sidebar">
    <div class="chat-app__sidebar-header">
      <span class="chat-app__workspace">⬡ Hitch</span>
    </div>

    <div class="chat-app__sidebar-section">
      <p class="chat-app__sidebar-label">Channels</p>
      <ul class="chat-app__channel-list">
        <li class="chat-app__channel"># general</li>
        <li class="chat-app__channel chat-app__channel--active"># engineering</li>
        <li class="chat-app__channel"># design</li>
        <li class="chat-app__channel"># product</li>
      </ul>
    </div>

    <div class="chat-app__sidebar-section">
      <p class="chat-app__sidebar-label">Direct</p>
      <ul class="chat-app__channel-list">
        <li class="chat-app__channel">Alex</li>
        <li class="chat-app__channel">Sam</li>
      </ul>
    </div>

    <div class="chat-app__signals">
      <span class="chat-app__signals-label">Signals</span>
      <span class="chat-app__signals-badge">3</span>
    </div>
  </aside>

  <!-- Center panel -->
  <main class="chat-app__center">
    <div class="chat-app__channel-header">
      <span class="chat-app__channel-name"># engineering</span>
      <span class="chat-app__channel-meta">4 members</span>
    </div>

    <div class="chat-app__messages">
      <!-- Message: Alex -->
      <div class="chat-app__msg">
        <span class="chat-app__msg-avatar">A</span>
        <div class="chat-app__msg-body">
          <div class="chat-app__msg-meta">
            <span class="chat-app__msg-name">Alex</span>
            <span class="chat-app__msg-time">2:14 PM</span>
          </div>
          <p class="chat-app__msg-text">Let's ship the new API endpoint on Thursday.</p>
        </div>
      </div>

      <!-- Message: Sam with branch -->
      <div class="chat-app__msg">
        <span class="chat-app__msg-avatar chat-app__msg-avatar--s">S</span>
        <div class="chat-app__msg-body">
          <div class="chat-app__msg-meta">
            <span class="chat-app__msg-name">Sam</span>
            <span class="chat-app__msg-time">2:16 PM</span>
            <span class="chat-app__branch-tag">↗ branch</span>
          </div>
          <p class="chat-app__msg-text">Agreed. I'll handle the tests.</p>
          <!-- Branch preview card -->
          <div class="chat-app__branch-card">
            <span class="chat-app__branch-icon">↗</span>
            <div class="chat-app__branch-info">
              <span class="chat-app__branch-name">branch: test plan</span>
              <span class="chat-app__branch-count">2 messages</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- AI action bar -->
    <div class="chat-app__ai-bar">
      <span class="chat-app__ai-icon">⬡</span>
      <span class="chat-app__ai-text">2 actions captured this conversation</span>
    </div>

    <!-- Input bar -->
    <div class="chat-app__input-bar">
      <div class="chat-app__input-field">
        <span class="chat-app__input-placeholder">Message #engineering</span>
      </div>
    </div>
  </main>

  <!-- Right panel: Actions -->
  <aside class="chat-app__actions-panel">
    <div class="chat-app__actions-header">Actions</div>
    <div class="chat-app__actions-list">

      <div class="chat-app__action-item">
        <span class="chat-app__action-check"></span>
        <div class="chat-app__action-body">
          <span class="chat-app__action-text">→ Ship API endpoint</span>
          <div class="chat-app__action-meta">
            <span class="chat-app__action-due">Thursday</span>
            <span class="chat-app__action-owner">Alex</span>
          </div>
        </div>
      </div>

      <div class="chat-app__action-item">
        <span class="chat-app__action-check"></span>
        <div class="chat-app__action-body">
          <span class="chat-app__action-text">→ Sam: test review</span>
          <div class="chat-app__action-meta">
            <span class="chat-app__action-due">this week</span>
          </div>
        </div>
      </div>

      <div class="chat-app__action-item">
        <span class="chat-app__action-check"></span>
        <div class="chat-app__action-body">
          <span class="chat-app__action-text">→ Design handoff</span>
          <div class="chat-app__action-meta">
            <span class="chat-app__action-due chat-app__action-due--pending">pending</span>
            <span class="chat-app__action-age">2 days ago</span>
          </div>
        </div>
      </div>

    </div>
  </aside>
</div>

<style>
  /* ── Scoped tokens ── */
  .chat-app {
    --_bg: #080808;
    --_surface: #0f0f0f;
    --_sidebar: #0b0b0b;
    --_divider: #252525;
    --_text: #f0ede8;
    --_text-muted: #8a8680;
    --_accent-text: var(--accent);
  }

  /* ── Container ── */
  .chat-app {
    height: 560px;
    display: flex;
    background: var(--_bg);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--_text);
    overflow: hidden;
  }

  /* ── Left sidebar ── */
  .chat-app__sidebar {
    width: 180px;
    flex-shrink: 0;
    background: var(--_sidebar);
    border-right: 1px solid var(--_divider);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .chat-app__sidebar-header {
    padding: 0.85rem 1rem;
    border-bottom: 1px solid var(--_divider);
    flex-shrink: 0;
  }

  .chat-app__workspace {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--_accent-text);
    letter-spacing: 0.02em;
  }

  .chat-app__sidebar-section {
    padding: 0.85rem 0 0.5rem;
    flex-shrink: 0;
  }

  .chat-app__sidebar-label {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0 1rem;
    margin-bottom: 0.35rem;
  }

  .chat-app__channel-list {
    list-style: none;
    display: flex;
    flex-direction: column;
  }

  .chat-app__channel {
    font-size: var(--text-xs);
    color: var(--_text-muted);
    padding: 0.3rem 1rem;
    cursor: pointer;
    border-radius: 4px;
    transition: background 0.15s;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .chat-app__channel:hover {
    background: rgba(255, 255, 255, 0.04);
    color: var(--_text);
  }

  .chat-app__channel--active {
    background: rgba(var(--accent-rgb), 0.08);
    color: var(--_accent-text);
  }

  .chat-app__signals {
    margin-top: auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.85rem 1rem;
    border-top: 1px solid var(--_divider);
  }

  .chat-app__signals-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--_text-muted);
  }

  .chat-app__signals-badge {
    background: var(--accent);
    color: #080808;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: 700;
    border-radius: 99px;
    padding: 0.1rem 0.45rem;
    line-height: 1.5;
  }

  /* ── Center panel ── */
  .chat-app__center {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
    border-right: 1px solid var(--_divider);
  }

  .chat-app__channel-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    border-bottom: 1px solid var(--_divider);
    flex-shrink: 0;
    background: var(--_sidebar);
  }

  .chat-app__channel-name {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--_text);
  }

  .chat-app__channel-meta {
    font-size: var(--text-xs);
    color: var(--_text-muted);
  }

  .chat-app__messages {
    flex: 1;
    overflow-y: auto;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    scrollbar-width: thin;
    scrollbar-color: var(--_divider) transparent;
  }

  .chat-app__msg {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .chat-app__msg-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: var(--_divider);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--_accent-text);
    flex-shrink: 0;
    line-height: 1;
  }

  .chat-app__msg-avatar--s {
    background: rgba(var(--accent-rgb), 0.1);
    color: var(--_accent-text);
  }

  .chat-app__msg-body {
    flex: 1;
    min-width: 0;
  }

  .chat-app__msg-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.2rem;
  }

  .chat-app__msg-name {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--_text);
  }

  .chat-app__msg-time {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_text-muted);
  }

  .chat-app__branch-tag {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_accent-text);
    background: rgba(var(--accent-rgb), 0.08);
    border: 1px solid rgba(var(--accent-rgb), 0.2);
    border-radius: 3px;
    padding: 0.05rem 0.4rem;
  }

  .chat-app__msg-text {
    font-size: var(--text-sm);
    color: var(--_text);
    line-height: 1.5;
  }

  /* Branch preview card */
  .chat-app__branch-card {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding: 0.45rem 0.75rem;
    background: rgba(var(--accent-rgb), 0.04);
    border: 1px solid rgba(var(--accent-rgb), 0.14);
    border-radius: 5px;
    max-width: 240px;
  }

  .chat-app__branch-icon {
    font-size: var(--text-sm);
    color: var(--_accent-text);
    flex-shrink: 0;
  }

  .chat-app__branch-info {
    display: flex;
    flex-direction: column;
    gap: 0.05rem;
  }

  .chat-app__branch-name {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--_accent-text);
  }

  .chat-app__branch-count {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_text-muted);
  }

  /* AI action bar */
  .chat-app__ai-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.55rem 1.25rem;
    background: rgba(var(--accent-rgb), 0.05);
    border-top: 1px solid rgba(var(--accent-rgb), 0.12);
    flex-shrink: 0;
  }

  .chat-app__ai-icon {
    font-size: var(--text-sm);
    color: var(--_accent-text);
  }

  .chat-app__ai-text {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--_accent-text);
    opacity: 0.8;
  }

  /* Input bar */
  .chat-app__input-bar {
    padding: 0.75rem 1.25rem;
    border-top: 1px solid var(--_divider);
    flex-shrink: 0;
  }

  .chat-app__input-field {
    background: var(--_surface);
    border: 1px solid var(--_divider);
    border-radius: 6px;
    padding: 0.55rem 0.9rem;
  }

  .chat-app__input-placeholder {
    font-size: var(--text-xs);
    color: var(--_text-muted);
    font-style: italic;
  }

  /* ── Right panel: Actions ── */
  .chat-app__actions-panel {
    width: 200px;
    flex-shrink: 0;
    background: var(--_sidebar);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .chat-app__actions-header {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--_divider);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--_text);
    letter-spacing: 0.06em;
    text-transform: uppercase;
    flex-shrink: 0;
  }

  .chat-app__actions-list {
    flex: 1;
    overflow-y: auto;
    padding: 0.75rem 0;
    display: flex;
    flex-direction: column;
    gap: 0;
    scrollbar-width: thin;
    scrollbar-color: var(--_divider) transparent;
  }

  .chat-app__action-item {
    display: flex;
    gap: 0.6rem;
    align-items: flex-start;
    padding: 0.7rem 1rem;
    border-bottom: 1px solid var(--_divider);
  }

  .chat-app__action-item:last-child {
    border-bottom: none;
  }

  .chat-app__action-check {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 1.5px solid var(--_divider);
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .chat-app__action-body {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 0;
  }

  .chat-app__action-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--_text);
    line-height: 1.4;
  }

  .chat-app__action-meta {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .chat-app__action-due {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_accent-text);
    opacity: 0.8;
  }

  .chat-app__action-due--pending {
    color: var(--_text-muted);
    opacity: 1;
  }

  .chat-app__action-owner,
  .chat-app__action-age {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--_text-muted);
  }

  /* ── Responsive ── */
  @media (max-width: 760px) {
    .chat-app__actions-panel {
      display: none;
    }
  }

  @media (max-width: 560px) {
    .chat-app__sidebar {
      width: 140px;
    }
  }
</style>
