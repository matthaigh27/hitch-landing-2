<section class="hero">
    <div class="hero__inner">
        <div class="hero__copy">
            <p class="hero__eyebrow">
                <span class="eyebrow-dot" aria-hidden="true"></span>
                Automated · Instant setup · Self-healing
            </p>
            <h1 class="hero__headline">
                Your product ships<br />in seconds.<br />
                <em>Your guides take weeks.</em>
            </h1>
            <p class="hero__sub">
                Hitch's agents use your product like your users and create
                guides, videos, and tutorials. Automatically.
            </p>
            <div class="hero__actions">
                <button type="button" class="btn btn--primary" data-open-waitlist
                    >Join the Waitlist</button
                >
                <!-- <a href="#demo" class="btn btn--ghost">See an Example Guide →</a
                > -->
            </div>
            <!-- <p class="hero__no-ci">
                No CI/CD required · GitHub, GitLab & Linear supported
            </p> -->
        </div>

        <!-- Deployment mode cards column -->
        <div class="hero__card-wrap">
            <div class="deploy-cards">
                <!-- Card 1: Point & Prompt -->
                <div
                    class="deploy-card deploy-card--featured"
                    aria-label="Point and Prompt deployment mode"
                >
                    <div class="deploy-card__top">
                        <span
                            class="deploy-card__badge deploy-card__badge--accent"
                            >Zero setup</span
                        >
                    </div>
                    <h3 class="deploy-card__title">Point &amp; Prompt</h3>
                    <p class="deploy-card__desc">
                        Give Hitch a URL. Agents explore your product like real
                        users and ship guides instantly.
                    </p>
                    <ul class="deploy-card__traits" aria-label="Features">
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >No codebase access
                        </li>
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >Start in minutes
                        </li>
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >Maximum security
                        </li>
                    </ul>
                </div>

                <!-- Card 2: Release-Aware -->
                <div
                    class="deploy-card"
                    aria-label="Release-Aware deployment mode"
                >
                    <div class="deploy-card__top">
                        <span class="deploy-card__badge">Pipeline</span>
                    </div>
                    <h3 class="deploy-card__title">Release-Aware</h3>
                    <p class="deploy-card__desc">
                        Connect to your CI/CD. Guides auto-generate and
                        self-heal on every release.
                    </p>
                    <ul class="deploy-card__traits" aria-label="Features">
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >GitHub, GitLab &amp; Linear
                        </li>
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >Auto-generates on release
                        </li>
                        <li>
                            <span class="trait-diamond" aria-hidden="true"
                                >◆</span
                            >Self-healing docs
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        min-height: 100svh;
        display: flex;
        align-items: center;
        padding: calc(80px + 4rem) var(--gutter) 5rem;
    }

    .hero__inner {
        max-width: var(--max-w);
        margin: 0 auto;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5rem;
        align-items: center;
    }

    /* ---- Copy column ---- */

    .hero__eyebrow {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: 0.06em;
        text-transform: uppercase;
        margin-bottom: 1.75rem;
    }

    .eyebrow-dot {
        display: inline-block;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--accent);
        flex-shrink: 0;
        animation: pulse-dot 2s ease-in-out infinite;
    }

    @media (prefers-reduced-motion: reduce) {
        .eyebrow-dot {
            animation: none;
        }
    }

    .hero__headline {
        font-family: var(--font-display);
        font-size: var(--text-hero);
        line-height: 1.05;
        font-weight: 400;
        color: var(--text);
        margin-bottom: 1.75rem;
        letter-spacing: -0.02em;
    }

    .hero__headline em {
        font-style: italic;
        color: var(--text-muted);
    }

    .hero__sub {
        font-size: var(--text-lg);
        color: var(--text-muted);
        max-width: 44ch;
        margin-bottom: 2.5rem;
        line-height: 1.7;
    }

    .hero__actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .hero__no-ci {
        font-size: var(--text-xs);
        color: var(--text-muted);
        margin-top: 0.75rem;
        font-family: var(--font-mono);
        letter-spacing: 0.04em;
        opacity: 0.7;
    }

    .btn {
        font-family: var(--font-mono);
        font-size: var(--text-sm);
        font-weight: 500;
        letter-spacing: 0.04em;
        padding: 0.8rem 1.75rem;
        border-radius: 999px;
        transition:
            transform 0.15s,
            background 0.2s,
            border-color 0.2s,
            color 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        white-space: nowrap;
    }

    .btn--primary {
        background: var(--accent);
        color: var(--bg);
        border: 1px solid var(--accent);
    }

    .btn--primary:hover {
        background: var(--accent-dim);
        border-color: var(--accent-dim);
        transform: translateY(-1px);
    }

    .btn--primary:active {
        transform: translateY(0);
    }

    .btn--ghost {
        border: 1px solid var(--divider);
        color: var(--text);
    }

    .btn--ghost:hover {
        border-color: var(--text-muted);
        transform: translateY(-1px);
    }

    .btn--ghost:active {
        transform: translateY(0);
    }

    /* ---- Deployment cards column ---- */

    .hero__card-wrap {
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .deploy-cards {
        width: 100%;
        max-width: 480px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* ---- Individual card ---- */

    .deploy-card {
        background: var(--surface);
        border: 1px solid var(--divider);
        border-radius: 10px;
        padding: 1.75rem 2rem;
        box-shadow:
            0 32px 80px rgba(0, 0, 0, 0.55),
            0 0 0 1px rgba(255, 255, 255, 0.04);
        opacity: 0;
        transform: translateY(16px);
        animation: card-in 0.5s var(--ease-out) forwards;
    }

    .deploy-card:nth-child(1) {
        animation-delay: 0.1s;
    }

    .deploy-card:nth-child(2) {
        animation-delay: 0.22s;
    }

    @keyframes card-in {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .deploy-card {
            animation: none;
            opacity: 1;
            transform: none;
        }
    }

    /* Featured card: accent left border + faint top glow */
    .deploy-card--featured {
        border-left: 2px solid var(--accent);
        box-shadow:
            0 32px 80px rgba(0, 0, 0, 0.55),
            0 0 0 1px rgba(255, 255, 255, 0.04),
            0 -1px 0 0 rgba(200, 255, 0, 0.25);
    }

    /* ---- Card internals ---- */

    .deploy-card__top {
        margin-bottom: 0.9rem;
    }

    .deploy-card__badge {
        display: inline-block;
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--text-muted);
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--divider);
        border-radius: 4px;
        padding: 0.2rem 0.55rem;
    }

    .deploy-card__badge--accent {
        color: var(--accent);
        background: rgba(200, 255, 0, 0.07);
        border-color: rgba(200, 255, 0, 0.25);
    }

    .deploy-card__title {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        font-weight: 400;
        letter-spacing: -0.01em;
        color: var(--text);
        margin-bottom: 0.6rem;
        line-height: 1.2;
    }

    .deploy-card__desc {
        font-size: var(--text-sm);
        color: var(--text-muted);
        line-height: 1.65;
        margin-bottom: 1.25rem;
    }

    .deploy-card__traits {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.45rem;
    }

    .deploy-card__traits li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-family: var(--font-mono);
        font-size: var(--text-xs);
        color: var(--text-muted);
        letter-spacing: 0.02em;
    }

    .trait-diamond {
        color: var(--accent);
        font-size: 0.45rem;
        flex-shrink: 0;
        line-height: 1;
        position: relative;
        top: 0.5px;
    }

    /* ---- Responsive ---- */

    @media (max-width: 900px) {
        .hero {
            padding-top: calc(80px + 2.5rem);
        }

        .hero__inner {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .deploy-cards {
            max-width: 100%;
        }
    }
</style>
