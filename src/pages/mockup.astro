---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hitch - Design Explorations">
    <div class="gallery">
        <header class="gallery__header">
            HITCH &nbsp;·&nbsp; DESIGN EXPLORATIONS &nbsp;·&nbsp; 2026
        </header>

        <!-- ══════════════════════════════════════════════════════════ -->
        <!-- V1: VERCEL-STYLE - SIDEBAR + RELEASE FEED                 -->
        <!-- ══════════════════════════════════════════════════════════ -->
        <section class="gallery__variant">
            <div class="gallery__tag">01 - FEED</div>
            <div class="gallery__frame">
                <div class="mk1__app">
                    <!-- Sidebar -->
                    <aside class="mk1__sidebar">
                        <div class="mk1__logo">◈ Hitch</div>
                        <nav class="mk1__nav">
                            <div class="mk1__nav-item mk1__nav-item--active">
                                Features
                            </div>
                            <div class="mk1__nav-item">Guides</div>
                            <div class="mk1__nav-item">Release Notes</div>
                            <div class="mk1__nav-item">Settings</div>
                        </nav>
                        <div class="mk1__sync-indicator">
                            <span class="mk1__sync-dot"></span>Syncing...
                        </div>
                    </aside>

                    <!-- Main -->
                    <main class="mk1__main">
                        <div class="mk1__main-header">
                            <h1 class="mk1__title">Features</h1>
                            <div class="mk1__meta-row">
                                <span class="mk1__meta-chip">6 features</span>
                                <span class="mk1__meta-sep">·</span>
                                <span
                                    class="mk1__meta-chip mk1__meta-chip--warn"
                                    >2 need attention</span
                                >
                                <span class="mk1__meta-sep">·</span>
                                <span class="mk1__meta-chip">Last sync 2m</span>
                            </div>
                        </div>

                        <div class="mk1__feed">
                            <!-- Row 1 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name"
                                        >Voice &amp; Audio</span
                                    >
                                    <span class="mk1__version-pill">v2.4.0</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--syncing"
                                        >Auto-syncing</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 1 revision</span
                                    >
                                    <span class="mk1__time">2h ago</span>
                                </div>
                            </div>
                            <div class="mk1__divider"></div>

                            <!-- Row 2 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name"
                                        >Webhook Triggers</span
                                    >
                                    <span class="mk1__version-pill">v2.3.5</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--review"
                                        >Needs Review</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 5 revisions</span
                                    >
                                    <span class="mk1__time">1d ago</span>
                                </div>
                            </div>
                            <div class="mk1__divider"></div>

                            <!-- Row 3 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name"
                                        >SSO Integration</span
                                    >
                                    <span class="mk1__version-pill">v2.3.0</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--live"
                                        >Live</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 3 revisions</span
                                    >
                                    <span class="mk1__time">3d ago</span>
                                </div>
                            </div>
                            <div class="mk1__divider"></div>

                            <!-- Row 4 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name">Mobile SDK</span
                                    >
                                    <span class="mk1__version-pill">v2.2.8</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--live"
                                        >Live</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 2 revisions</span
                                    >
                                    <span class="mk1__time">1wk ago</span>
                                </div>
                            </div>
                            <div class="mk1__divider"></div>

                            <!-- Row 5 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name"
                                        >Billing API</span
                                    >
                                    <span class="mk1__version-pill">v2.2.5</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--live"
                                        >Live</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 0 revisions</span
                                    >
                                    <span class="mk1__time">2wks ago</span>
                                </div>
                            </div>
                            <div class="mk1__divider"></div>

                            <!-- Row 6 -->
                            <div class="mk1__row">
                                <div class="mk1__row-left">
                                    <span class="mk1__row-name"
                                        >Role-based Access</span
                                    >
                                    <span class="mk1__version-pill">v2.2.0</span
                                    >
                                </div>
                                <div class="mk1__row-right">
                                    <span
                                        class="mk1__status-badge mk1__status-badge--live"
                                        >Live</span
                                    >
                                    <span class="mk1__revisions"
                                        >↻ 4 revisions</span
                                    >
                                    <span class="mk1__time">3wks ago</span>
                                </div>
                            </div>
                        </div>

                        <div class="mk1__bottom-bar">
                            <span class="mk1__bottom-logo">◈ Hitch</span>
                            <span class="mk1__bottom-sep">·</span>
                            <span class="mk1__bottom-text"
                                >6 features tracked</span
                            >
                            <span class="mk1__bottom-sep">·</span>
                            <span class="mk1__bottom-text"
                                >Auto-synced from GitHub</span
                            >
                        </div>
                    </main>
                </div>
            </div>
        </section>

        <!-- ══════════════════════════════════════════════════════════ -->
        <!-- V2: POSTHOG-STYLE - STATUS CARDS + FEATURE GRID           -->
        <!-- ══════════════════════════════════════════════════════════ -->
        <section class="gallery__variant">
            <div class="gallery__tag">02 - GRID</div>
            <div class="gallery__frame">
                <div class="mk2__app">
                    <!-- Header -->
                    <div class="mk2__header">
                        <span class="mk2__logo">◈ Hitch</span>
                        <span class="mk2__page-title">Docs Health</span>
                        <span class="mk2__syncing-badge">
                            <span class="mk2__syncing-dot"></span>↻ syncing
                        </span>
                    </div>

                    <!-- Status cards -->
                    <div class="mk2__status-row">
                        <div class="mk2__status-card mk2__status-card--live">
                            <div class="mk2__status-count">4</div>
                            <div class="mk2__status-label">Live</div>
                        </div>
                        <div class="mk2__status-card mk2__status-card--syncing">
                            <div class="mk2__status-count">
                                <span class="mk2__status-pulse-dot"></span>1
                            </div>
                            <div class="mk2__status-label">Auto-syncing</div>
                        </div>
                        <div class="mk2__status-card mk2__status-card--review">
                            <div class="mk2__status-count">1</div>
                            <div class="mk2__status-label">Needs Review</div>
                        </div>
                    </div>

                    <!-- Feature grid -->
                    <div class="mk2__grid">
                        <div class="mk2__card mk2__card--syncing">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name"
                                    >Voice &amp; Audio</span
                                >
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.4.0</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--syncing"
                                    >Auto-syncing</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 1 revision</span
                                >
                                <span class="mk2__card-time">2h ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--syncing"
                            >
                            </div>
                        </div>

                        <div class="mk2__card mk2__card--review">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name"
                                    >Webhook Triggers</span
                                >
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.3.5</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--review"
                                    >Needs Review</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 5 revisions</span
                                >
                                <span class="mk2__card-time">1d ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--review"
                            >
                            </div>
                        </div>

                        <div class="mk2__card">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name"
                                    >SSO Integration</span
                                >
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.3.0</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--live"
                                    >Live</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 3 revisions</span
                                >
                                <span class="mk2__card-time">3d ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--live"
                            >
                            </div>
                        </div>

                        <div class="mk2__card">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name">Mobile SDK</span>
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.2.8</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--live"
                                    >Live</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 2 revisions</span
                                >
                                <span class="mk2__card-time">1wk ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--live"
                            >
                            </div>
                        </div>

                        <div class="mk2__card">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name">Billing API</span>
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.2.5</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--live"
                                    >Live</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 0 revisions</span
                                >
                                <span class="mk2__card-time">2wks ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--live"
                            >
                            </div>
                        </div>

                        <div class="mk2__card">
                            <div class="mk2__card-header">
                                <span class="mk2__card-name"
                                    >Role-based Access</span
                                >
                            </div>
                            <div class="mk2__card-version-row">
                                <span class="mk2__card-version">v2.2.0</span>
                                <span
                                    class="mk2__card-pill mk2__card-pill--live"
                                    >Live</span
                                >
                            </div>
                            <div class="mk2__card-footer">
                                <span class="mk2__card-revisions"
                                    >↻ 4 revisions</span
                                >
                                <span class="mk2__card-time">3wks ago</span>
                            </div>
                            <div
                                class="mk2__card-accent mk2__card-accent--live"
                            >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ══════════════════════════════════════════════════════════ -->
        <!-- V3: MUX-STYLE - ACTIVITY TIMELINE                         -->
        <!-- ══════════════════════════════════════════════════════════ -->
        <section class="gallery__variant">
            <div class="gallery__tag">03 - TIMELINE</div>
            <div class="gallery__frame">
                <div class="mk3__app">
                    <!-- Header bar -->
                    <div class="mk3__header">
                        <span class="mk3__logo">◈ Hitch</span>
                        <span class="mk3__page-title">Release Activity</span>
                        <span class="mk3__summary-pill"
                            >6 features · 2 syncing</span
                        >
                    </div>

                    <!-- Timeline -->
                    <div class="mk3__timeline">
                        <div class="mk3__event" style="opacity:1.0">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--syncing"></div>
                                <div class="mk3__spine-line"></div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >Voice &amp; Audio</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.4.0</span
                                    >
                                </div>
                                <div class="mk3__event-detail">
                                    Guide auto-syncing · ↻ 1 revision · 2h ago
                                </div>
                            </div>
                        </div>

                        <div class="mk3__event" style="opacity:0.88">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--review"></div>
                                <div class="mk3__spine-line"></div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >Webhook Triggers</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.3.5</span
                                    >
                                </div>
                                <div class="mk3__event-detail">
                                    Guide needs review · ↻ 5 revisions · 1d ago
                                </div>
                            </div>
                        </div>

                        <div class="mk3__event" style="opacity:0.72">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--live"></div>
                                <div class="mk3__spine-line"></div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >SSO Integration</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.3.0</span
                                    >
                                </div>
                                <div class="mk3__event-detail">
                                    Guide live · ↻ 3 revisions · 3d ago
                                </div>
                            </div>
                        </div>

                        <div class="mk3__event" style="opacity:0.56">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--live"></div>
                                <div class="mk3__spine-line"></div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >Mobile SDK</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.2.8</span
                                    >
                                </div>
                                <div class="mk3__event-detail">
                                    Guide live · ↻ 2 revisions · 1wk ago
                                </div>
                            </div>
                        </div>

                        <div class="mk3__event" style="opacity:0.40">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--live"></div>
                                <div class="mk3__spine-line"></div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >Billing API</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.2.5</span
                                    >
                                </div>
                                <div class="mk3__event-detail">
                                    Guide live · ↻ 0 revisions · 2wks ago
                                </div>
                            </div>
                        </div>

                        <div class="mk3__event" style="opacity:0.25">
                            <div class="mk3__spine-col">
                                <div class="mk3__dot mk3__dot--live"></div>
                                <div
                                    class="mk3__spine-line mk3__spine-line--last"
                                >
                                </div>
                            </div>
                            <div class="mk3__event-body">
                                <div class="mk3__event-top">
                                    <span class="mk3__event-name"
                                        >Role-based Access</span
                                    >
                                    <span class="mk3__event-version"
                                        >v2.2.0</span
                                    >
